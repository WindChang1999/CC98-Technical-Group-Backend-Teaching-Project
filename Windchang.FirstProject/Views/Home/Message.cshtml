*@

@if (this.TempData["responseAddMessage"] != null)
{
<div class="alert alert-success" role="alert">
    Add message success!
</div>
}
<div class="list-group">
    @foreach (var message in this.Model)
    {
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@message.Sender</h5>
            <small>3 days ago</small>
        </div>
        <p class="mb-1">@message.Content</p>
    }
</div>

<form asp-controller="Home" asp-action="ResponseAddMessage">
    <div class="form-group">
        <label for="sender">Sender</label>
        <input type="text" class="form-control" name="sender" id="sender">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <input type="text" class="form-control" name="content" id="content">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

